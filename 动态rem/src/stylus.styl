@import './mix.styl'

body 
  background white
  font-size rem(16)

#section1
  text-align center
  img 
    width rem(74)
    margin-top rem(50) 
    margin-bottom rem(34) 
    border-radius 50%
  .content 
    display flex;
    justify-content space-between
    flex-wrap wrap
    padding 0 rem(16)
    span 
      background #d8d8d8;
      width rem(128)
      height rem(24)
      line-height rem(24)
      margin 0 0 rem(24)
    
#section2
  background #efefef 
  text-align center
  padding rem(50) 0 rem(30)
  h2 
    background #d8d8d8
    display: inline-block
    width rem(200) 
    margin 0 0 rem(20)
    border-radius rem(14) 
    line-height rem(40) 
    height rem(40)
  p 
    background #e8e8e8
    width rem(250) 
    display: inline-block;
    margin 0 0 rem(20)
    line-height rem(24) 
    height rem(24) 
    border-radius rem(14)
